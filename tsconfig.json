{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@types/*": ["./types/*"],
      "@db/*": ["./db/*"],
      "@services/*": ["./services/*"],
      "@config/*": ["./config/*"],
      "@renderer/*": ["./renderer/*"],
      "types": ["./types"],
      "db": ["./db"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "types/**/*.d.ts",
    "types/index.d.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-main", "db", "release"],
  "files": ["types/index.d.ts"]
}
